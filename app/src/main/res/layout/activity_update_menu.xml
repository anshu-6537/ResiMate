<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateMenu">


    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload Menu"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="85dp"
        android:layout_marginHorizontal="69dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:fontFamily="@font/ubuntu_medium"
        />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/firebaseimg"
        android:layout_width="220dp"
        android:layout_height="220dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="135dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/upimg"
        android:layout_marginBottom="45dp"
        android:src="@drawable/uploadfiles"
        android:layout_marginHorizontal="45dp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/upimg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_box"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="550dp"
        android:layout_marginHorizontal="45dp"
        android:text="Upload Image"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:fontFamily="@font/ubuntu_medium"
        />

    <EditText
        android:id="@+id/filename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="80dp"
        app:layout_constraintTop_toBottomOf="@id/firebaseimg"
        android:layout_marginTop="25dp"
        android:hint="Enter file name"
        android:visibility="invisible"
        />

</androidx.constraintlayout.widget.ConstraintLayout>