<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EnterStudent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="40dp"
        android:text="Enter Student Name"
        android:fontFamily="@font/ubuntu_medium"
        android:id="@+id/name"
        android:layout_marginTop="120dp"
        />


    <EditText
        android:id="@+id/edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="70dp"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:fontFamily="@font/ubuntu_regular"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edit_name"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="40dp"
        android:text="Enter Student Age"
        android:fontFamily="@font/ubuntu_medium"
        android:id="@+id/age"
        android:layout_marginTop="40dp"
        />


    <EditText
        android:id="@+id/edit_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="70dp"
        android:fontFamily="@font/ubuntu_regular"
        app:layout_constraintTop_toBottomOf="@id/age"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edit_age"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="40dp"
        android:text="Enter Student Branch"
        android:fontFamily="@font/ubuntu_medium"
        android:id="@+id/branch"
        android:layout_marginTop="40dp"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="70dp"
        app:layout_constraintTop_toBottomOf="@id/branch"
        android:fontFamily="@font/ubuntu_regular"
        android:id="@+id/edit_branch"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edit_branch"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="40dp"
        android:text="Enter Room No."
        android:fontFamily="@font/ubuntu_medium"
        android:id="@+id/room_no"
        android:layout_marginTop="40dp"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="70dp"
        app:layout_constraintTop_toBottomOf="@id/room_no"
        android:fontFamily="@font/ubuntu_regular"
        android:id="@+id/edit_room_no"
        />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edit_room_no"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="25dp"
        android:text="Register"
        android:textAllCaps="false"
        android:fontFamily="@font/ubuntu_bold"
        android:backgroundTint="@color/teal_200"
        />

</androidx.constraintlayout.widget.ConstraintLayout>